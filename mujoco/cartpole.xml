<mujoco model="cartpole">
    <compiler inertiafromgeom="true" angle="radian" coordinate="local"/>
    
    <option timestep="0.01" gravity="0 0 -9.81">
        <flag constraint="disable" energy="enable"/>
    </option>
    
    <default>
        <joint armature="0" damping="0" limited="false"/>
        <geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
    </default>
    
    <worldbody>
        <!-- Ground plane -->
        <geom name="floor" pos="0 0 -0.1" size="10 10 0.1" type="plane" rgba="0.8 0.9 0.8 1" contype="1" condim="3"/>
        
        <!-- Cart -->
        <body name="cart" pos="0 0 0">
            <!-- Cart can slide along x-axis -->
            <joint name="slider" type="slide" pos="0 0 0" axis="1 0 0" range="-2.4 2.4" limited="true"/>
            <geom name="cart_geom" type="box" size="0.2 0.1 0.05" pos="0 0 0" rgba="0.7 0.3 0.3 1" mass="1.0"/>
            
            <!-- Pole -->
            <body name="pole" pos="0 0 0">
                <!-- Pole can rotate around y-axis (in 2D plane) -->
                <joint name="hinge" type="hinge" pos="0 0 0" axis="0 1 0"/>
                <geom name="pole_geom" type="capsule" fromto="0 0 0 0 0 0.5" size="0.02" rgba="0.3 0.3 0.7 1" mass="0.1"/>
                <!-- Add a small sphere at the tip for visual clarity -->
                <geom name="pole_tip" type="sphere" pos="0 0 0.5" size="0.03" rgba="0.9 0.1 0.1 1" mass="0.01"/>
            </body>
        </body>
    </worldbody>
    
    <actuator>
        <!-- Force actuator on the cart -->
        <motor name="cart_motor" joint="slider" gear="1" ctrllimited="true" ctrlrange="-10 10"/>
    </actuator>
    
    <sensor>
        <!-- Sensors for state observation -->
        <jointpos name="cart_pos" joint="slider"/>
        <jointpos name="pole_angle" joint="hinge"/>
        <jointvel name="cart_vel" joint="slider"/>
        <jointvel name="pole_angvel" joint="hinge"/>
    </sensor>
</mujoco>
